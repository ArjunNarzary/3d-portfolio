{
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "bracketSpacing": true,
    "importOrder": [
        "^react",
        "^@",
        "^react$",
        "^framer-motion$",
        "^components/(.*)$",
        "^[./]",
        "^(?!.*.s?css$)^[./^[a-zA-Z_]+$",
        "\\.s?css$"
    ],
    "importOrderSeparation": true
}
